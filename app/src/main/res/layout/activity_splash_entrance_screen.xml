<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash_entrance_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="mult_603.seniordesignprojectcordiusmotus.SplashEntranceScreen">

    <TextView android:id="@+id/title_splash"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/app_name"
    android:textSize="30sp"
    android:textStyle="italic"
    android:gravity="center"
    android:textColor="@color/wordColorRed"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="@color/wordColorRed"
        android:text="@string/splash_title"/>

    <ImageView android:id="@+id/splash_icon"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/cardian_banner"/>
</LinearLayout>
